<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="@dimen/list_item_padding_sides"
        android:layout_marginRight="@dimen/list_item_padding_sides"
        android:layout_marginTop="@dimen/list_item_padding_top">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/list_item_recipename_textview"
            android:layout_weight="6"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@id/drag"
            android:layout_width="@dimen/drag_list_item_width"
            android:layout_height="@dimen/drag_list_item_height"
            android:background="@drawable/ic_menu_black_24dp"
            android:layout_gravity="center_vertical" />


</LinearLayout>